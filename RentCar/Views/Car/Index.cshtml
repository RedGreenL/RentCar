@model PagedList.IPagedList<RentCar.Models.Car>
@using PagedList.Mvc;

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<p>
    @Html.ActionLink("Add new car", "Create", null, null, new { @class = "btn btn-md btn-primary" })
</p>
<table class="table table-striped">
    <thead class="bg-primary">
        <tr>
            <th>
                Brand
            </th>
            <th>
                Model
            </th>
                <th>
                    Color
                </th>
                <th>
                    Capacity
                </th>
                <th>
                    Type
                </th>
                <th>
                    Fuel
                </th>
                <th>
                    Gear
                </th>
                <th>
                    Year
                </th>
                <th>
                    Price
                </th>
                <th></th>
            </tr>
    </thead>


    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Brand)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Model)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Color)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Engine) cm2
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FuelType.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GearType.Name)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Year)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                <div class="btn-group" role="group" aria-label="Basic example">
                    @Html.ActionLink("Edit", "Edit", new {id = item.Car_ID}) |
                    @Html.ActionLink("Details", "Details", new {id = item.Car_ID}) |
                    @Html.ActionLink("Delete", "Delete", new {id = item.Car_ID})
                </div>
            </td>
        </tr>
    }

</table>
@Html.PagedListPager(Model, page => Url.Action("Index", new { page }))